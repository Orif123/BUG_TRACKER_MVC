@model BugTrackerProj.ViewModels.NewBugViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewBug</title>
</head>
<body>

    <h4>Bug</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.CategoryId, new List<SelectListItem>(ViewBag.CategoryId), "")
                </div>
                <div class="form-group">
                    <label asp-for="RepoLink" class="control-label"></label>
                    <input asp-for="RepoLink" class="form-control" />
                    <span asp-validation-for="RepoLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" asp-action="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
