@{
    ViewData["Title"] = "BugDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BugTrackerProj.ViewModels.BugCommentDetailsViewModel
<h1>BugDetails</h1>
<body>
    <table border="1" class="table table-striped">
        <thead>
            <tr>
                <th>
                    Project Name
                </th>
                <th>
                    User
                </th>
                <th>
                    Date
                </th>
                <th>
                    Description
                </th>
            </tr>
        </thead>
        <tbody class="tablebody">
            @foreach (var bug in Model.Bug)
            {
                <tr>
                    <td>
                        @bug.Category.CtaegoryName
                    </td>
                    <td id="userName">
                        @bug.User.UserName
                    </td>
                    <td>
                        @bug.BugDate
                    </td>
                    <td>
                        @bug.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @foreach (var item in Model.Comments)
        {
            <ul id="chat">
                <li id="sender">@item.BugId</li>
                <li id="text">@item.Text</li>
            </ul>
        }
    </div>
    <h1 class="details">Comments</h1>
    <form method="post">
        <input  asp-for="BugId" value="@(ViewContext.RouteData.Values["id"])" />
        <label  asp-for="CommentText"></label>
        <textarea id="messageText" asp-for="CommentText"></textarea>
        <input onclick="sendMessage()" type="submit" asp-action="AddComment" />
    </form>
    <script>
        const userName = @(ViewContext.RouteData.Values["id"]);
    </script>
   
</body>


